{
  "name": "gh-load-pull-request",
  "version": "0.4.1",
  "description": "Download GitHub pull request and convert it to markdown",
  "type": "module",
  "main": "src/gh-load-pull-request.mjs",
  "bin": {
    "gh-load-pull-request": "./src/gh-load-pull-request.mjs"
  },
  "scripts": {
    "test": "node --test tests/",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check:file-size": "node scripts/check-file-size.mjs",
    "check": "npm run lint && npm run format:check && npm run check:file-size",
    "prepare": "husky",
    "changeset": "changeset",
    "changeset:version": "node scripts/changeset-version.mjs",
    "changeset:publish": "changeset publish",
    "changeset:status": "changeset status --since=origin/main",
    "version:patch": "./src/version.mjs patch",
    "version:minor": "./src/version.mjs minor",
    "version:major": "./src/version.mjs major"
  },
  "keywords": [
    "github",
    "pull-request",
    "markdown",
    "cli",
    "tool",
    "pr",
    "download"
  ],
  "author": "Link.Foundation",
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/link-foundation/gh-load-pull-request.git"
  },
  "bugs": {
    "url": "https://github.com/link-foundation/gh-load-pull-request/issues"
  },
  "homepage": "https://github.com/link-foundation/gh-load-pull-request#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "fs-extra": "^11.3.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "test-anywhere": "^0.8.48"
  },
  "lint-staged": {
    "*.{js,mjs,cjs}": [
      "eslint --fix --max-warnings 0",
      "prettier --write",
      "prettier --check"
    ],
    "*.md": [
      "prettier --write",
      "prettier --check"
    ]
  }
}
